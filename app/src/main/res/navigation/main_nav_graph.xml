<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.aispeakingbuddy.homepage.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_chat"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_quiz"
            app:destination="@id/quizFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_lesson"
            app:destination="@id/lessonFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_out_up" />

        <action
            android:id="@+id/action_home_to_flashcards"
            app:destination="@id/flashcardsFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_out_up" />

    </fragment>

    <!-- Chat Fragment -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.aispeakingbuddy.chatpage.ChatFragment"
        android:label="AI Chat"
        tools:layout="@layout/fragment_chat" />

    <!-- Quiz Fragment -->
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.aispeakingbuddy.quizpage.QuizFragment"
        android:label="Daily Quiz"
        tools:layout="@layout/fragment_quiz" />

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.aispeakingbuddy.profilepage.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- Lesson Fragment -->
    <fragment
        android:id="@+id/lessonFragment"
        android:name="com.example.aispeakingbuddy.lessonpage.LessonFragment"
        android:label="Lesson"
        tools:layout="@layout/fragment_lesson" />

    <!-- Flashcards Fragment -->
    <fragment
        android:id="@+id/flashcardsFragment"
        android:name="com.example.aispeakingbuddy.flashcardspage.FlashcardsFragment"
        android:label="Flashcards"
        tools:layout="@layout/fragment_flashcards" />

</navigation>